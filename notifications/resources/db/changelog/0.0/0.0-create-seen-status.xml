<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <property name="uuid_type" value="UUID" dbms="h2"/>
  <property name="uuid_type" value="UNIQUEIDENTIFIER" dbms="mssql"/>

  <changeSet id="01" author="igor.paprzycki@pwc.com">
    <validCheckSum>ANY</validCheckSum>

    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="seen_status"/>
      </not>
    </preConditions>

    <createTable tableName="seen_status">
      <column name="entity_id" type="INT" autoIncrement="true" incrementBy="1" startWith="1">
        <constraints nullable="false"
          unique="true"
          primaryKey="true"
          primaryKeyName="pk_seen_status_entity_id"/>
      </column>

      <column name="seen_status_id" type="${uuid_type}">
        <constraints nullable="false"/>
      </column>

      <column name="application_id" type="SMALLINT">
        <constraints foreignKeyName="fk_seen_status_application"
          nullable="false"
          references="application(entity_id)"/>
      </column>

      <column name="tenant_id" type="SMALLINT">
        <constraints foreignKeyName="fk_seen_status_tenant"
          nullable="false"
          references="tenant(entity_id)"/>
      </column>

      <column name="person_id" type="INT">
        <constraints foreignKeyName="fk_seen_status_person"
          nullable="false"
          references="person(entity_id)"/>
      </column>

      <column name="last_seen_at" type="${timestamp_type}">
        <constraints nullable="false"/>
      </column>

      <column name="version" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>

<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <property name="timestamp_type" value="TIMESTAMP" dbms="h2"/>
  <property name="timestamp_type" value="DATETIME2(7)" dbms="mssql"/>

  <property name="uuid_type" value="UUID" dbms="h2"/>
  <property name="uuid_type" value="UNIQUEIDENTIFIER" dbms="mssql"/>

  <changeSet author="igor.paprzycki@pwc.com" id="01">
    <validCheckSum>ANY</validCheckSum>

    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="content"/>
      </not>
    </preConditions>

    <createTable tableName="content">
      <column name="entity_id" type="BIGINT" autoIncrement="true" incrementBy="1" startWith="1">
        <constraints nullable="false"
          primaryKey="true"
          primaryKeyName="pk_content_entity_id"
          unique="true"/>
      </column>

      <column name="triggered_by" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>

      <column name="title" type="VARCHAR(100)"/>

      <column name="text" type="VARCHAR(100)"/>

      <column name="additional_data" type="VARCHAR(1000)"/>

      <column name="published_at" type="${timestamp_type}">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>

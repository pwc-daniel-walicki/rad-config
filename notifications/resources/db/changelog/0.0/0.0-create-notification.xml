<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <property name="uuid_type" value="UUID" dbms="h2"/>
  <property name="uuid_type" value="UNIQUEIDENTIFIER" dbms="mssql"/>

  <changeSet author="igor.paprzycki@pwc.com" id="01">
    <validCheckSum>ANY</validCheckSum>

    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="notification"/>
      </not>
    </preConditions>

    <createTable tableName="notification">
      <column name="entity_id" type="BIGINT" autoIncrement="true" incrementBy="1" startWith="1">
        <constraints nullable="false"
          primaryKey="true"
          primaryKeyName="pk_notification_entity_id"
          unique="true"/>
      </column>

      <column name="notification_id" type="${uuid_type}">
        <constraints nullable="false"/>
      </column>

      <column name="content_id" type="BIGINT">
        <constraints foreignKeyName="fk_notification_content"
          nullable="false"
          references="content(entity_id)"/>
      </column>

      <column name="recipient_id" type="INT">
        <constraints foreignKeyName="fk_notification_person"
          nullable="false"
          references="person(entity_id)"/>
      </column>

      <column name="application_id" type="SMALLINT">
        <constraints foreignKeyName="fk_notification_application"
          nullable="false"
          references="application(entity_id)"/>
      </column>

      <column name="tenant_id" type="SMALLINT">
        <constraints foreignKeyName="fk_notification_tenant"
          nullable="true"
          references="tenant(entity_id)"/>
      </column>

      <column name="sender_id" type="INT">
        <constraints foreignKeyName="fk_notification_sender"
          nullable="true"
          references="sender(entity_id)"/>
      </column>

      <column name="state" type="VARCHAR(5)">
        <constraints nullable="false"/>
      </column>

      <column name="version" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="01" author="igor.paprzycki@pwc.com">
    <validCheckSum>ANY</validCheckSum>

    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="application"/>
      </not>
    </preConditions>

    <createTable tableName="application">
      <column name="entity_id" type="SMALLINT" autoIncrement="true" incrementBy="1" startWith="1">
        <constraints nullable="false"
          primaryKey="true"
          primaryKeyName="pk_application_entity_id"
          unique="true"/>
      </column>

      <column name="application_id" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
